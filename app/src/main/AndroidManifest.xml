<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gismo.moviechoose">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="com.gismo.moviechoose.TERMS_READ"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MovieChooserActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.MovieDetailsActivity"
            android:theme="@style/noActionBar"/>
        <provider
            android:authorities="@string/content_authority"
            android:name=".data.FavoriteMoviesProvider"
            android:exported="false"
            android:syncable="true"/>
    </application>

</manifest>